{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@src/*":     ["src/*"],
      "@api/*":     ["src/api/*"],
      "@helpers/*": ["src/helpers/*"],
      "@enums/*":   ["src/enums/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": ["src/**/*", "tests/**/*", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
